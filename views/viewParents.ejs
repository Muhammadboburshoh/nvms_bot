<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="<%=site_host%>/stylesheets/header.css">
  <title>view parrents page</title>
</head>

<body>

  <div class="main-wrapper">
    <div class="sidebar-wrapper">
      <section class="sidebar">
        <a class="sidebar_logo" href="/">
          <img class="sidebar_logo-img" src="<%=site_host%>/images/logo.png" width="140" height="35" alt="site-logo" />
        </a>

        <nav class="sidebar_nav">
          <ul class="sidebar_list">
            <li class="sidebar_item">
              <a class="sidebar_link" href="/">
                <span class="sidebar_icon">
                  <img class="first_icon" src="<%=site_host%>/images/classes.png" width="=30" height="30" alt="" />
                </span>
                Sinflar
              </a>
            </li>
            <li class="sidebar_item">
              <a class="sidebar_link" href="/parents/0">
                <span class="sidebar_icon">
                  <img class="first_icon" src="<%=site_host%>/images/parent.png" width="=30" height="30" alt="" />
                </span>
                Ota onalar
              </a>
            </li>
            <li class="sidebar_item">
              <a class="sidebar_link" href="/c/parents">
                <span class="sidebar_icon">
                  <img class="first_icon" src="<%=site_host%>/images/plas.png" width="=20" height="20" alt="" />
                </span>
                Ota ona qo'shish
              </a>
            </li>
          </ul>
        </nav>
      </section>
    </div>

    <div class="content-wrapper">
      <header class="header">

        <div class="header__right">
          <div class="profile">
            <div class="profile__info">
              <span class="profile__name">
                <%= name %>
              </span>
            </div>
            <button class="profile__btn">
              <img src="<%=site_host%>/images/Profile.svg" width="35" height="30" alt="" />
            </button>
            <div class="profile__wrapper">
              <button class="logout-btn">
                Chiqish
                <img class="logout-img" src="<%=site_host%>/images/logout.svg" alt="logout" />
              </button>
            </div>
          </div>
        </div>
      </header>

      <section class="main-content-wrapper">

        <ul class="parrents-ul">
          <% for (let i=0; i < classes.length; i++ ) { %>
            <li class="parrent-li">
              <a href="/parents/<%= classes[i].class_id %>">
                <%= classes[i].class %> - sinf
              </a>
            </li>
            <% } %>
        </ul>
        <table class="categories__table">
          <thead>
            <tr class="categories__thead-tr">
              <th class="categories__thead-th">Ota ona ismi</th>
              <th class="categories__thead-th">Telifon</th>
              <th class="categories__thead-th">Password</th>
              <th class="categories__thead-th">Tahrirlash</th>
              <th class="categories__thead-th">O'chirish</th>
            </tr>
          </thead>
          <tbody class="classes">
            <% for (let i=0; i < parents.length; i++ ) { %>
              <tr class="categories__thead-tr">
                <th class="categories__thead-th">
                  <%= parents[i].parent %>
                </th>
                <th class="categories__thead-th">
                  <%= parents[i].phone %>
                </th>
                <th class="categories__thead-th">
                  <%= parents[i].password %>
                </th>
                <th class="categories__thead-th">
                  <button data-id="<%= parents[i].parent_id %> " class="categories__edit-btn">tahrirlash</button>
                </th>
                <th class="categories__thead-th">
                  <button data-id="<%= parents[i].parent_id %> " class="categories__delete-btn">o'chirish</button>
                </th>
              </tr>
              <% } %>
          </tbody>
        </table>
      </section>
    </div>
  </div>


  <script src="<%=site_host%>/javascripts/config.js"></script>
  <script src="<%=site_host%>/javascripts/viewParents.js"></script>
</body>

</html>