<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="<%=site_host%>/stylesheets/header.css">
  <title>Home page</title>
</head>

<body>
  <div class="main-wrapper">
    <div class="sidebar-wrapper">
      <section class="sidebar">
        <a class="sidebar_logo" href="/admin/home">
          <img class="sidebar_logo-img" src="<%=site_host%>/images/logo.png" width="140" height="35" alt="site-logo" />
        </a>

        <nav class="sidebar_nav">
          <ul class="sidebar_list">
            <li class="sidebar_item">
              <a class="sidebar_link schools_link" href="/admin/home">
                <span class="sidebar_icon">
                  <img class="first_icon" src="<%=site_host%>/images/school-icon.jpg" width="=30" height="30" alt="" />
                </span>
                <span>
                    Maktablar
                </span>
              </a>
            </li>
          </ul>
        </nav>
      </section>
    </div>

    <div class="content-wrapper">
      <header class="header">
        <div class="header__right">
          <div class="profile">
            <div class="profile__info">
              <span class="profile__name">
                <%= name %>
              </span>
            </div>
            <button class="profile__btn">
              <img src="<%=site_host%>/images/Profile.svg" width="35" height="30" alt="" />
            </button>
            <div class="profile__wrapper">
              <button class="logout-btn">
                Chiqish
                <img class="logout-img" src="<%=site_host%>/images/logout.svg" alt="logout" />
              </button>
            </div>
          </div>
        </div>
      </header>

      <section class="main-content-wrapper">
        <form class="school__create-form" action="/admin/home" method="POST" enctype="application/x-www-form-urlencoded">
          <div class="input-wrapper">
            <label for="create-category">Maktab nomini qo'shing: </label>
            <input name="school_name" class="school__create-input" type="text" placeholder="makatab nomi..." required />
          </div>
          <div class="input-wrapper">
            <label for="create-category">Maktab uchun login yarating: </label>
            <input name="login" class="school__create-input" type="text" placeholder="maktab raqamini yozing" required />
          </div>
          <div class="input-wrapper">
            <label for="create-category">Password yarating: </label>
            <input name="password" class="school__create-input" type="text" placeholder="password" required />
          </div>
          <button class="school__create-btn" type="submit">Qo'shish</button>
        </form>

        <table class="categories__table">
          <thead>
            <tr class="categories__thead-tr">
              <th class="categories__thead-th">Maktab nomi</th>
              <th class="categories__thead-th">Login</th>
              <th class="categories__thead-th">Password</th>
              <th class="categories__thead-th">Tahrirlash</th>
              <th class="categories__thead-th">O'chirish</th>
            </tr>
          </thead>
          <tbody class="classes">
            <% for (let i=0; i < schools.length; i++ ) { %>
                <tr class="categories__tbody-tr">
                  <th class="categories__tbody-td">
                    <%= schools[i].name %>
                  </th>
                  <th class="categories__tbody-td">
                    <%= schools[i].login %>
                  </th>
                  <th class="categories__tbody-td">
                    ***
                  </th>
                  <th class="categories__tbody-td">
                    <button data-id="<%= schools[i].school_id %>" class="categories__edit-btn" data-update="0">tahrirlash</button>
                  </th>
                  <th class="categories__tbody-td">
                    <button data-id="<%= schools[i].school_id %> " class="categories__delete-btn">o'chirish</button>
                  </th>
                </tr>
                <% } %>
          </tbody>
        </table>
      </section>
    </div>
  </div>

  <script src="<%=site_host%>/javascripts/config.js"></script>
  <script src="<%=site_host%>/javascripts/schools.js"></script>
</body>

</html>